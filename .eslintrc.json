{
    "env": {
        "node": true,
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "quotes": "off",
        "dot-notation": "off",
        "camelcase": "off",
        "space-before-function-paren": "off",
        "eol-last": "off",
        "no-unused-vars": "warn",
        "no-undef": "error",
        "no-dupe-args": "error",
        "no-dupe-keys": "error",
        "no-invalid-regexp": "error",
        "no-irregular-whitespace": "error",
        "no-this-before-super": "error",
        "no-dupe-class-members": "error",
        "no-const-assign": "error",
        "constructor-super": "error",
        "no-async-promise-executor": "error",
        "indent": [
            2,
            4
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "only-multiline"
        ]
    }
}